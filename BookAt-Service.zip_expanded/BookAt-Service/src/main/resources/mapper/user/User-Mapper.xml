<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.bookat.mapper.UserMapper">
	
	<select id="findUserById" resultType="User">
		SELECT * FROM USERS WHERE USER_ID = #{userId}
	</select>
	
	<update id="updateUserRefreshToken" parameterType="map">
		UPDATE USERS SET REFRESH_TOKEN = #{refreshToken, jdbcType=VARCHAR} WHERE USER_ID = #{userId}
	</update>
	
	<update id="updatePassword" parameterType="map">
		UPDATE USERS SET USER_PW = #{password, jdbcType=VARCHAR} WHERE USER_ID = #{userId}
	</update>
	
</mapper>
